<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <RandomAccessFile name="File" fileName="application.log">
            <PatternLayout>
                <Pattern>(%date) [%level]: %message%n%throwable</Pattern>
            </PatternLayout>
        </RandomAccessFile>

        <Console name="Console">
            <PatternLayout>
                <Pattern>%highlight{(%date) [%level]: %message%throwable{short.message}%n}</Pattern>
            </PatternLayout>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="debug">
            <AppenderRef ref="File"/>
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>